<div class="columns is-centered">
    <div class="column is-8">
        <div class="box">
            <h1 class="title">Student Information</h1>
            <p class="subtitle">Please provide your basic information to begin the assessment.</p>
            
            <form method="POST" action="/assessment/student">
                <div class="field">
                    <label class="label">Full Name *</label>
                    <div class="control">
                        <input class="input" type="text" name="name" required 
                               value="<%= locals.formData?.name || '' %>"
                               placeholder="Enter your full name">
                    </div>
                </div>
                
                <div class="field">
                    <label class="label">Email Address *</label>
                    <div class="control">
                        <input class="input" type="email" name="email" required 
                               value="<%= locals.formData?.email || '' %>"
                               placeholder="your.email@example.com">
                    </div>
                </div>
                
                <div class="columns">
                    <div class="column">
                        <div class="field">
                            <label class="label">Section *</label>
                            <div class="control">
                                <div class="select is-fullwidth">
                                    <select name="section" required>
                                        <option value="">Choose your section</option>
                                        <% sections.forEach(section => { %>
                                            <option value="<%= section %>" 
                                                    <%= locals.formData?.section === section ? 'selected' : '' %>>
                                                <%= section %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="column">
                        <div class="field">
                            <label class="label">Batch (Graduation Year) *</label>
                            <div class="control">
                                <div class="select is-fullwidth">
                                    <select name="batch" required>
                                        <option value="">Choose your batch</option>
                                        <% batches.forEach(batch => { %>
                                            <option value="<%= batch %>" 
                                                    <%= locals.formData?.batch === batch ? 'selected' : '' %>>
                                                <%= batch %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="field">
                    <label class="label">School (Optional)</label>
                    <div class="control">
                        <div class="select is-fullwidth">
                            <select name="school">
                                <option value="">Choose your school (optional)</option>
                                <% schools.forEach(school => { %>
                                    <option value="<%= school %>" 
                                            <%= locals.formData?.school === school ? 'selected' : '' %>>
                                        <%= school %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                </div>
                
                <div class="field">
                    <div class="control">
                        <button class="button is-primary is-fullwidth" type="submit">
                            Continue to Assessment
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>